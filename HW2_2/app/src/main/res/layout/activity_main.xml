<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:text="預設Toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:text="自定義Toast"
        app:layout_constraintStart_toStartOf="@id/btn_toast"
        app:layout_constraintTop_toBottomOf="@id/btn_toast"/>

    <Button
        android:id="@+id/btn_snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:text="按鈕式Snackbar"
        app:layout_constraintStart_toStartOf="@id/btn_custom"
        app:layout_constraintTop_toBottomOf="@id/btn_custom"/>

    <Button
        android:id="@+id/btn_dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:text="按鈕式AlertDialog"
        app:layout_constraintStart_toStartOf="@id/btn_snackbar"
        app:layout_constraintTop_toBottomOf="@id/btn_snackbar"/>

    <Button
        android:id="@+id/btn_dialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:text="列表式AlertDialog"
        app:layout_constraintStart_toStartOf="@id/btn_dialog1"
        app:layout_constraintTop_toBottomOf="@id/btn_dialog1"/>

    <Button
        android:id="@+id/btn_dialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:text="單選式AlertDialog"
        app:layout_constraintStart_toStartOf="@id/btn_dialog2"
        app:layout_constraintTop_toBottomOf="@id/btn_dialog2"/>
</androidx.constraintlayout.widget.ConstraintLayout>